<?xml version="1.0" encoding="utf-8"?>

<!-- 主屏页的专辑item布局 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="10.0dip" >
    
	<View
	    android:layout_width="fill_parent"
	    android:layout_height="1px"
	    android:background="@color/grey_button_normal_color" />

    <RelativeLayout
        android:id="@+id/designerContainer"
        android:layout_width="fill_parent"
        android:layout_height="47.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip" >

        <include layout="@layout/avatar" />
	
        <TextView
            android:id="@+id/txtUsername"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_toLeftOf="@+id/txtTime"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text=""
            android:textColor="#ff252525"
            android:textSize="16.0sp"
            android:textStyle="normal" />
        
        <TextView
            android:id="@+id/txtTime"
            android:layout_width="70.0dip"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/btnContainer"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10.0dip"
            android:layout_marginRight="8.0dip"
            android:gravity="right|center"
           	android:text="发布时间"
            android:textColor="#ff999999"
            android:textSize="13.0sp"/>
		
       	
        <RelativeLayout
            android:id="@+id/btnContainer"
            android:layout_width="60.0dip"
            android:layout_height="28.0dip"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5.0dip" >
            
             <Button
                android:id="@+id/btnUserHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_grey_bg"
                android:text="个人主页"
                android:textColor="@color/txt_dark_color"
                android:textSize="12.0sp" 
                />
            <!-- 
            <Button
                android:id="@+id/btnFollow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_green_bg"
                android:text="关注"
                android:textColor="#ffffffff"
                android:textSize="12.0sp" 
                android:visibility="gone" 
                />

            <Button
                android:id="@+id/btnUnfollow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_grey_bg"
                android:text="已关注"
                android:textColor="#ff999999"
                android:textSize="12.0sp"
                android:visibility="gone" 
               />
             -->
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/viewEditor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtUsername"
            android:layout_marginTop="20.0dip"
            android:layout_toLeftOf="@+id/btnContainer"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/imgEditor"
                android:layout_width="12.0dip"
                android:layout_height="12.0dip"
                android:layout_marginTop="5.0dip"
                android:scaleType="centerInside"
                android:src="@drawable/icon_nice_mini"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/txtEditorDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7.0dip"
                android:layout_marginTop="1.0dip"
                android:layout_toRightOf="@+id/imgEditor"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/pushWords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4.0dip"
                android:layout_marginTop="7.0dip"
                android:layout_toRightOf="@+id/txtEditorDesc"
                android:gravity="bottom"
                android:singleLine="true"
                android:text="编辑精选"
                android:textColor="#ff999999"
                android:textSize="12.0sp"
                android:visibility="visible" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/imgContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:background="@color/grey_button_active_color"
		android:padding="0.5dp"
        android:gravity="center"
        >

        <ImageView
        android:id="@+id/cover_img"
        android:layout_width="fill_parent"
        android:layout_height="270dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:visibility="visible" />

