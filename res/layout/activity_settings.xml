<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/titlebar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50.0dip"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/settings_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:background="#fff2f2f2"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="设置" />
			
			
			<RelativeLayout
                style="@style/style_settings_item_container"
                >

                <TextView
                    android:id="@+id/pushSetting"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/button_white_bg"
                    android:gravity="center_vertical"
                    android:text="消息提醒" />
                
                <include
                        android:id="@+id/push_settings_switcher"
                        style="@style/style_settings_switcher"
                        layout="@layout/switcher_view" />
            </RelativeLayout>
            
			 <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="#fff2f2f2" />
            
            <RelativeLayout
               style="@style/style_settings_item_container">

                <TextView
                    android:id="@+id/aboutUs"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/button_white_bg"
                    android:gravity="center_vertical"
                    android:text="关于我们" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10.0dip"
                    android:layout_centerVertical="true"
                    android:src="@drawable/btn_explore_more" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="#fff2f2f2" />

            <RelativeLayout
                 style="@style/style_settings_item_container">

                <TextView
                    android:id="@+id/clearCache"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_white_bg"
                    android:gravity="center_vertical"
                    android:text="清除缓存" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10.0dip"
                    android:layout_centerVertical="true"
                    android:src="@drawable/btn_explore_more" />
            </RelativeLayout>
            
            
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="#fff2f2f2" />

            <RelativeLayout
                style="@style/style_settings_item_container">

                <TextView
                    android:id="@+id/websiteView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_white_bg"
                    android:gravity="center_vertical"
                    
                    android:text="访问 [网页版] 金玩儿网" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10.0dip"
                    android:layout_centerVertical="true"
                    android:src="@drawable/btn_explore_more" />
            </RelativeLayout>
            
             <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="#fff2f2f2" />

            <!-- 
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="#fff2f2f2" />
			
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="58.0dip" >

                <TextView
                    android:id="@+id/checkUpdate"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/button_white_bg"
                    android:gravity="center_vertical"
                    
                    android:text="检查新版本" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dip"
                    android:src="@drawable/btn_explore_more" />
            </RelativeLayout>
			-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="#fff2f2f2" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/logout"
                    android:layout_width="fill_parent"
                    android:layout_height="45.0dip"
                    android:background="@drawable/button_red_bg"
                    android:layout_margin="10dp"
                    android:text="注销登录"
                    android:textColor="#ffffffff"
                    android:textSize="18.0sp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>