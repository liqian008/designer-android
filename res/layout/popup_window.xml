<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    android:background="@color/black2c" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="165.0dip"
        android:layout_centerVertical="true"
        >

        <TextView
            android:id="@+id/clear_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26.0dip"
            android:text="清除缓存"
            android:textColor="#fff"
            android:textSize="18.0sp" />

        <TextView
            android:id="@+id/tip_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clear_cache"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15.0dip"
            android:text="根据缓存文件大小，清理时间从几秒"
           android:textColor="#fff"
            android:textSize="14.0sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tip_first"
            android:layout_centerHorizontal="true"
            android:text="到几分钟不等，请耐心等待"
            android:textColor="#fff"
            android:textSize="14.0sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="45.0dip"
            android:background="#ffeeeeee" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <Button
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@color/black2c"
                android:textColor="#fff"
                android:text="取消"
                android:textSize="14.0sp" 
                 />

            <ImageView
                android:layout_width="1.0px"
                android:layout_height="fill_parent"
                android:background="#ffeeeeee" />

            <Button
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@color/black2c"
                 android:textColor="#fff"
                android:text="清除" 
                android:textSize="14.0sp" 
                />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>