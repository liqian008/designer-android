<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:layout_margin="30dp"
    android:background="#ff666666" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="167.0dip"
        android:layout_centerVertical="true"
        android:background="#ffffffff" >

        <TextView
            android:id="@+id/clear_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26.0dip"
            android:text="清除缓存"
            android:textColor="#ff252525"
            android:textSize="18.0sp" />

        <TextView
            android:id="@+id/tip_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clear_cache"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15.0dip"
            android:text="根据缓存文件大小，清理时间从几秒"
            android:textColor="#ff252525"
            android:textSize="14.0sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tip_first"
            android:layout_centerHorizontal="true"
            android:text="到几分钟不等，请耐心等待"
            android:textColor="#ff252525"
            android:textSize="14.0sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50.0dip"
            android:background="#ffeeeeee" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <Button
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@color/white"
                android:text="取消" />

            <ImageView
                android:layout_width="1.0px"
                android:layout_height="50.0dip"
                android:background="#ffeeeeee" />

            <Button
                android:layout_width="0.0px"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@color/white"
                android:text="清除" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>