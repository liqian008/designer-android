            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_alignLeft="@+id/snsInfoLayout"
            android:layout_below="@+id/snsInfoLayout"
            android:layout_marginTop="6.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
			
            <RelativeLayout 
                android:id="@+id/followBtnContainer"
                android:layout_width="fill_parent"
                android:layout_height="28.0dip"
                android:layout_marginLeft="10dp"
                 android:layout_weight="1"
                >
                <Button
                android:id="@+id/btnFollow"
                android:layout_width="fill_parent"
                android:layout_height="28.0dip"
                android:background="@drawable/button_green_bg" 
                android:text="关 注"
                android:textColor="#ffffffff"
                android:textSize="12.0sp" 
                android:visibility="gone" 
                />
                
                <Button
                android:id="@+id/btnUnfollow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_grey_bg"
                android:text="已关注"
                android:textColor="#ff999999"
                android:textSize="12.0sp"
                android:visibility="gone" 
               />
                
                
               <Button
                android:id="@+id/btnMyFavorite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/button_green_bg"
                android:text="我的收藏"
                android:textColor="#ffffffff"
                android:textSize="12.0sp"
                android:visibility="gone" 
               />
            </RelativeLayout>
            
            
