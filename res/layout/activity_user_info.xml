<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/titlebar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50.0dip"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/mainContainer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/avatarContainer"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/button_white_bg" >

                <RelativeLayout
                    android:id="@+id/avatarBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="10.0dip" >

                    <include layout="@layout/avatar" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/modifyAvatar"
                    android:layout_width="fill_parent"
                    android:layout_height="58.0dip"
                    android:layout_marginLeft="20.0dip"
                    android:layout_toRightOf="@+id/avatarBox"
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:text="头像"
                    android:textSize="16.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20.0dip"
                    android:layout_marginTop="22.0dip"
                    android:src="@drawable/btn_explore_more"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="#fff2f2f2" />

            <RelativeLayout
                android:id="@+id/userTypeContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_button_normal_color"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true" >

                <TextView
                    android:id="@+id/userTypeLabel"
                    android:layout_width="67.0dp"
                    android:layout_height="58.0dip"
                    android:layout_alignParentLeft="true"
                    android:editable="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:text="身份"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/userTypeTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="58.0dip"
                    android:layout_toRightOf="@+id/userTypeLabel"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:paddingLeft="10.0dip"
                    android:text="普通用户"
                    android:textSize="16.0sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_alignParentBottom="true"
                    android:background="#fff2f2f2" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_button_normal_color"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true" >

                <TextView
                    android:id="@+id/nickNameLabel"
                    android:layout_width="67.0dp"
                    android:layout_height="58.0dip"
                    android:layout_alignParentLeft="true"
                    android:editable="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:text="昵称"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/nickNameTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="58.0dip"
                    android:layout_toRightOf="@+id/nickNameLabel"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:paddingLeft="10.0dip"
                    android:text=""
                    android:textSize="16.0sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_alignParentBottom="true"
                    android:background="#fff2f2f2" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/usernameContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_button_normal_color"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/usernameLabel"
                    android:layout_width="67.0dp"
                    android:layout_height="58.0dip"
                    android:layout_alignParentLeft="true"
                    android:editable="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:text="登录名"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/usernameTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="58.0dip"
                    android:layout_toRightOf="@+id/usernameLabel"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:paddingLeft="10.0dip"
                    android:text=""
                    android:textSize="16.0sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_alignParentBottom="true"
                    android:background="#fff2f2f2" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/weixinNumberContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_button_normal_color"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/weixinNumberLabel"
                    android:layout_width="67.0dp"
                    android:layout_height="58.0dip"
                    android:layout_alignParentLeft="true"
                    android:editable="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:text="微信号"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/weixinNumberTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="58.0dip"
                    android:layout_toRightOf="@+id/weixinNumberLabel"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:paddingLeft="10.0dip"
                    android:text=""
                    android:textSize="16.0sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_alignParentBottom="true"
                    android:background="#fff2f2f2" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/shopContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_white_bg"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/shopLabel"
                    android:layout_width="67.0dp"
                    android:layout_height="58.0dip"
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:text="淘宝"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/shopTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="58.0dip"
                    android:layout_toRightOf="@+id/shopLabel"
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:text=""
                    android:textSize="16.0sp" />

                <Spinner
                    android:id="@+id/provinceSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/shopTextView"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/citySpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/provinceSpinner"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20.0dip"
                    android:layout_marginTop="22.0dip"
                    android:src="@drawable/btn_explore_more"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_alignParentBottom="true"
                    android:background="#fff2f2f2" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/introduceContainer"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/button_white_bg"
                android:minHeight="58.0dip"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/introduceLabel"
                    android:layout_width="67.0dp"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:minHeight="58.0dip"
                    android:paddingLeft="10.0dip"
                    android:text="简介"
                    android:textSize="16.0sp" />

                <TextView
                    android:id="@+id/introduceTextView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_toRightOf="@+id/introduceLabel"
                    android:gravity="center_vertical"
                    android:minHeight="58.0dip"
                    android:paddingLeft="10.0dip"
                    android:paddingRight="30.0dip"
                    android:text=""
                    android:textSize="16.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20.0dip"
                    android:src="@drawable/btn_explore_more"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_alignParentBottom="true"
                    android:background="#fff2f2f2" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>